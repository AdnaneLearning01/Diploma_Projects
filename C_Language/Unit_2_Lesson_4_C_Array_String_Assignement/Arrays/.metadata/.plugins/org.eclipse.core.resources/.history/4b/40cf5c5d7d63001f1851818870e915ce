/* C Program to Find Sum of Two Matrix of Order 2*2 */

#include <stdio.h>

int i = 0;
int j = 0;
int Matrix_1[2][2];
int Matrix_2[2][2];
int sum[2][2];

int main()
{
	printf("Enter the element of the 1st Matrix : \n");

	for (i = 0; i < 2; i++)
	{
		for (j = 0; j < 2; j++)
		{
			printf("Enter a%d%d : ",i,j);
			scanf("%d", &Matrix_1[i][j]);
			fflush(stdin);fflush(stdout);
		}
	}

	for (i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			printf("%d \t", Matrix_1[i][j]);
		}
		printf("\n");
	}


	return 0;
}


